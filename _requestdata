//
// USER ROUTES
//

'GET' /users

'GET' /users/username
// please send username as req.username

'POST' /users

{
  username: ''
  password: ''
}

'PUT' /users
// replace undefined with new data

{
  id: 'user id'
  username: undefined,
  password: undefined,
  name: undefined,
  email: undefined,
  img_url: undefined,
}

//
// GROUPS ROUTES
//

'GET' /groups : please send user_id
'GET' /groups/activity : please send group_id

// 'POST' to /groups

{
  name: 'string',
  desc: 'text',
  members: ['id(number)', 'id', 'id']
}

// 'POST' to /groups/expenses

{
  title: 'string',
  amount: 'number with 2 decimals, max 8 digits',
  group_id: 'number',
  paid_by: 'logged in\'s user id number',
  img_url: 'url string',
  note: 'text',
  members: ['id(number)', 'id', 'id']
}

// 'PUT' to /groups/expenses
please send expense_id
// replace undefined with new data

{
  title: undefined,
  amount: undefined,
  img_url: undefined,
  note: undefined
}


